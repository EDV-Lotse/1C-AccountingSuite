			<Settings xsi:type="DynamicList">
				<ManualQuery>true</ManualQuery>
				<DynamicDataRead>true</DynamicDataRead>
				<QueryText>SELECT
	DocumentSalesInvoice.Ref,
	DocumentSalesInvoice.Number,
	DocumentSalesInvoice.Date,
	DocumentSalesInvoice.Company,
	DocumentSalesInvoice.DocumentTotal,
	DocumentSalesInvoice.DocumentTotalRC,
	GeneralJournalBalance.AmountBalance AS Due_FCY,
	GeneralJournalBalance.AmountRCBalance AS Due
FROM
	Document.SalesInvoice AS DocumentSalesInvoice
		LEFT JOIN AccountingRegister.GeneralJournal.Balance AS GeneralJournalBalance
		ON (GeneralJournalBalance.ExtDimension2 = DocumentSalesInvoice.Ref)
			AND (GeneralJournalBalance.ExtDimension2 REFS Document.SalesInvoice)</QueryText>
